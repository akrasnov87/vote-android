<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorBackgroundFloating">@color/colorFloating</item>
        <item name="android:windowBackground">@color/colorSecondaryText</item>

        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColorSecondary">@color/colorHintDark</item>

        <item name="buttonStyle">@style/AppTheme.Dialog.ButtonStyle</item>
        <item name="editTextStyle">@style/AppTheme.EditTextStyle</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!--Стиль для родительского layout отдельного ряда в RecyclerView (item_something.xml)-->
    <style name="AppTheme.Dialog.ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_state</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.Button.AccentStyle" parent="AppTheme.ButtonStyle">
        <item name="android:background">@drawable/button_accent_state</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!--Стили для TextView-->
    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_xs_16</item>
    </style>

    <style name="TextViewMainText" parent="TextViewBase">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">@dimen/high_text_size</item>
    </style>

    <style name="TextViewLabelText" parent="TextViewBase">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="AppTheme.TextView">

    </style>

    <style name="AppTheme.NavigationItemView" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="AppTheme.TextView.Error">
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
