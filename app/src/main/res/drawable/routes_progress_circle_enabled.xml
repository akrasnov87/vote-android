<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadius="6dp"
            android:innerRadiusRatio="8"
            android:shape="ring"
            android:thickness="24dp"
            android:thicknessRatio="20.0"
            android:useLevel="true">


            <gradient
                android:centerColor="#7dc099"
                android:endColor="#7dc099"
                android:startColor="#7dc099"
                android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadius="6dp"
                android:innerRadiusRatio="8"
                android:shape="ring"
                android:thickness="24dp"
                android:thicknessRatio="20.0"
                android:useLevel="true">


                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="#398B5C"
                    android:endColor="#398B5C"
                    android:startColor="#398B5C"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>
