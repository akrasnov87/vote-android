<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <TextView
        android:id="@+id/rating_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/high_text_size"
        tools:text="1" />

    <TextView
        android:id="@+id/rating_item_fio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/rating_item_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rating_item_count"
        android:textSize="@dimen/medium_text_size"
        tools:text="Иванов Иван Иванович" />

    <TextView
        android:id="@+id/rating_item_uik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/rating_item_id"
        app:layout_constraintTop_toBottomOf="@id/rating_item_fio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorHint"
        tools:text="1806" />

    <TextView
        android:id="@+id/rating_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/high_text_size"
        tools:text="216"/>

    <TextView
        android:id="@+id/rating_item_count_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_item_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorSuccessLight"
        android:textSize="@dimen/medium_text_size"
        tools:text="+25"/>

</androidx.constraintlayout.widget.ConstraintLayout>