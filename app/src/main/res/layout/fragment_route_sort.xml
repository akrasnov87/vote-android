<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fRouteSort_tMenu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/fRouteSort_rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fRouteSort_tMenu">

        <TextView
            android:id="@+id/fRouteSort_tvTitle"
            style="@style/TextViewMainTitle"
            android:text="@string/routes_sort" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fRouteSort_rlTop"
        android:background="@color/contentColor">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_start_date"
                android:layout_marginStart="@dimen/size_xxxs_4"
                android:layout_marginTop="@dimen/size_s_24"
                android:labelFor="@id/fRouteSort_spRouteStarts"
                android:textColor="@color/colorPrimary" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/fRouteSort_spRouteStarts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:layout_margin="@dimen/size_xxxs_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_end_date"
                android:layout_marginStart="@dimen/size_xxxs_4"
                android:layout_marginTop="@dimen/size_s_24"
                android:labelFor="@id/fRouteSort_spRouteEnds"
                android:textColor="@color/colorPrimary" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/fRouteSort_spRouteEnds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_xxxs_4"
                android:background="@drawable/spinner_background" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
