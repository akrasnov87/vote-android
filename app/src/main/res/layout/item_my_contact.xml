<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/item_my_contact_appartament"
        style="@style/AppTheme.TextView.Caption"
        android:layout_width="0dp"
        android:layout_marginTop="0dp"
        tools:text="121" />

    <TextView
        android:id="@+id/item_my_contact_name"
        style="@style/AppTheme.TextView.Simple"
        android:layout_marginStart="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/item_my_contact_appartament"
        android:textColor="@color/colorHint"
        tools:text="яковлева 21" />

</androidx.constraintlayout.widget.ConstraintLayout>