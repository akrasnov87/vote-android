<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/high_text_size"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="«Еще раз здравствуйте, меня зовут _____, я информатор избирательной
                    комиссии, 22 апреля состоится всенародное голосование о внесении поправок в
                    Конституцию РФ. Также 22 апреля на своем избирательном участке Вы сможете
                    принять участие в викторине с розыгрышем ценных призов и высказать Ваше
                    мнение о необходимости присвоения Чебоксарам почетного звания «Город
                    трудовой доблести», возьмите, пожалуйста, информационные материалы,
                    ознакомьтесь, в них все подробно указано»."/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_item_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/question_item_description"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>