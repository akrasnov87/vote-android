<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/size_xxxs_4">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/itemContact_etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fio"
            android:inputType="text"
            android:textSize="@dimen/very_large_font_size"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/itemContact_etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textSize="@dimen/very_large_font_size"
            tools:ignore="Autofill" />

    </LinearLayout>

    <ImageButton
        android:background="@drawable/ic_delete_black_24dp"
        android:id="@+id/itemContact_btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_record"
        android:layout_marginStart="@dimen/size_xxs_8"
        android:contentDescription="@string/delete_record" />

</LinearLayout>