<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content">
    <ImageView
        android:id="@+id/pinCodeLin_ivFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_xxs_8"
        app:srcCompat="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pinCodeLin_ivSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_xxs_8"
        app:srcCompat="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pinCodeLin_ivThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_xxs_8"
        app:srcCompat="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pinCodeLin_ivFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />
</LinearLayout>