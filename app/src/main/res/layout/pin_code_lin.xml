<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <ImageView
        android:id="@+id/pinCodeLin_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_xxs_8"
        android:background="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pinCodeLin_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_xxs_8"
        android:background="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pinCodeLin_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_xxs_8"
        android:background="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pinCodeLin_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pin_circle_empty_24dp"
        tools:ignore="ContentDescription" />
</LinearLayout>